:root
  --white: #fff
  --red: #d73c4e
  --yellow: #ffea00
  --skyblue: #3d8fd6
  --blue: #2b4a91
  --orange: #f25d26

*
  letter-spacing 0.2rem
  color var(--white)
  font-size 20px
  font-family 'Dela Gothic One', 'M PLUS Rounded 1c', sans-serif

.header, .main, .footer
  width 96%

.body
  background-color var(--skyblue)

  .header
    position absolute
    top 0
    left 0
    z-index 100
    height 100vh
    .header-top
      display flex
      align-items center
      width 85%
      height 15vh
      margin 0 auto
      .logo
        .logo-title
          .logo-link
            .logo-img
              width 25%
      .nav
        display flex
        flex-direction row-reverse
        align-items anchor-center
        .nav-ul
          display flex
          .nav-li
            padding 0 1rem
            .nav-link
              font-size 1.1rem

    .header-main
      display block
      width 100%
      height 72.5%

    // 下記は間隔調整したい
    .header-bottom
      padding 0.3rem 0
      background var(--red)
      .bbs
        white-space nowrap
        border-top 3px dashed var(--white)
        border-bottom 3px dashed var(--white)
        background var(--red)
        width 100%

        .swiper-wrapper
          display flex
          align-items center
          transition-timing-function linear

          .swiper-slide
            width 12%
            white-space nowrap
            margin 0.4rem 0.3rem
            border 3px solid var(--white)
            padding 0.2rem 2rem
            border-radius 4rem
            white-space nowrap
            .bbs-link
              display flex
              align-items center
              justify-content center
              font-weight bold
              .bbs-tag
                margin-right 0.4rem
                font-size 0.6rem
                font-family 'M PLUS Rounded 1c', sans-serif
              .bbs-tag-name
                font-size 0.8rem
                font-family 'M PLUS Rounded 1c', sans-serif

  .section
    width 100vw
    height 100vh
    overflow hidden
    .section-title
      .section-main-title
        font-size 5rem
        text-align center
      .section-sub-title
        display block
        text-align center
        font-size 1.2rem
    .news-content
      .section-button
        background none
        border 3px solid var(--white)
        border-radius 4rem
        padding 1rem 2rem
        .section-button-link
          font-size 1.5rem
      .about-content
        .about-content-text
          font-weight bold
          font-family 'M PLUS Rounded 1c', sans-serif



  .footer
      width 100vw
      height 50vh

  #news
    background var(--skyblue)
  #about
    .about-content
      .about-content-text
        width 50%
        margin 0 auto
        font-weight bold
        font-family 'M PLUS Rounded 1c', sans-serif


// component parts
.side-nav
  position fixed
  top 0
  right 0
  z-index 100
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  width 5%
  height 100%
  background-color var(--blue)

  .side-nav-menu
    background none
    border 3px solid var(--white)
    width 3rem
    height 3.5rem
    border-radius 0.4rem
    align-items baseline
    i
      font-size 2rem
  .side-nav-ul
    .side-nav-li
      margin-top 1.5rem
      .side-nav-link
        i
          display flex
          justify-content center
          font-size 1.5rem

.dark-filter
  filter brightness(0.6) contrast(1,2)

@keyframes flowing
  0%
    transform translateX(0%)
  100%
    transform translateX(-100%)

.cursor
  position fixed
  width 12px
  height 12px
  // background white
  border-radius 50%
  pointer-events none
  transform translate(-50%, -50%)
  z-index 9999
  transition transform 0.1s linear, width 0.2s ease, height 0.2s ease, background 0.2s ease

  .cursor-circle
    position absolute
    top 50%
    left 50%
    width 100px
    height 100px
    transform translate(-50%, -50%)
    animation rotate 10s linear infinite
    opacity 0.8
    transform-origin center

    .cursor-svg
      width 100%
      height 100%
      display block

      textPath
        fill var(--white)
        font-size 15px
        font-weight bold
        letter-spacing 3px
        font-family 'M PLUS Rounded 1c', sans-serif

  &.hover
    width 30px
    height 30px
    background rgba(255, 255, 255, 0.5)

.scroll-down
  display flex
  justify-content center
  position relative
  width 2.5rem
  height 5rem

.scroll-down-arrow
	position absolute
	width 30px
	height 8px
	opacity 0
	transform scale3d(0.5, 0.5, 0.5)
	animation scroll-down-animation 3s ease-out infinite
	&:first-child
		animation scroll-down-animation 3s ease-out 1s infinite
	&:nth-child(2)
		animation scroll-down-animation 3s ease-out 2s infinite
	&:before
		left 0
		transform skew(0deg, 30deg)
	&:after
		right 0
		width 50%
		transform skew(0deg, -30deg)
.scroll-down-arrow:before,
.scroll-down-arrow:after
	content ' '
	position absolute
	top 0
	height 100%
	width 51%
	background var(--white)
@keyframes scroll-down-animation
  25%
    opacity: 1

  33%
    opacity: 1
    transform: translateY(30px)

  67%
    opacity: 1
    transform: translateY(40px)

  100%
    opacity: 0
    transform: translateY(55px) scale3d(0.5, 0.5, 0.5)

.scroll-down-text
	display flex
  align-items center
	margin-top 75px
	margin-left -30px
	font-family "Helvetica Neue", "Helvetica", Arial, sans-serif
	font-size 12px
	color var(--white)
	text-transform uppercase
	white-space nowrap
	opacity .25
	animation pulse 2s linear alternate infinite

@keyframes rotate
  from
    transform translate(-50%, -50%) rotate(0deg)
  to
    transform translate(-50%, -50%) rotate(360deg)

@keyframes pulse
  from
    opacity 0.3
  to
    opacity 1


